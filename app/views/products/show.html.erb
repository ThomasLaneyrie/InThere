

<%= javascript_include_tag "main", "data-turbo-track": "reload", defer: true %>

<div class="container-fluid py-5">
  <div class="card mx-auto" style="max-width: 800px;">
    <div class="row no-gutters">
      <div class="col-md-7">
        <div class="card-body">
        <div class="bs-component">
          <h1 class="card-title"><%= @product.title.capitalize %></h1>
          </div>
          <h5 class="card-text"> Prix TTC: <%= @product.price %></h5>
          <%= button_to "Ajouter au panier", product_carts_path(:product_id => @product.id), class:"btn btn-outline4 btn-lg position-absolute bottom-0 start-0 mb-3 ml-3" %>
        </div>
      </div>
      <div class="col-md-5">
        <img src=<%= @product.image_url %> alt="<%= @product.title %>" class="card-img">
      </div>
    </div>
  </div>
</div>

