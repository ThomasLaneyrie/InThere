<div class="bs-component">
  <div class="container mt-4", style="max-width:600px">  
    <%= form_for(product) do |form| %>
  
    <div class="form-group" style="max-width:500px">
      <div class="form-label mt-3">
        <%= form.label "Titre", style: "display: block" %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-label mt-3">
        <%= form.label "Categorie", style: "display: block" %>
        <%= form.collection_select :category_id, Category.all, :id, :title, { prompt: "Select a category" }, {class: 'form-control selectpicker', 'data-live-search': 'true'} %>
      </div>
      <div class="form-label mt-3">
        <%= form.label "Description", style: "display: block" %>
        <%= form.text_area :description, class: 'form-control' %>
      </div>
      <div class="form-label mt-3">
        <%= form.label "Prix (€)", style: "display: block" %>
        <%= form.number_field :price, class: 'form-control' %>
      </div>
      <div class="form-label mt-3">
        <%= form.label "URL", style: "display: block" %>
        <%= form.text_field :image_url, class: 'form-control' %>
      </div>
      <div class="form-label mt-3">
        <%= form.label "Color", style: "display: block" %>
        <%= form.text_field :color, class: 'form-control' %>
      </div>
      <div class="form-label mt-3">
        <%= form.label "Brand", style: "display: block" %>
        <%= form.text_field :brand, class: 'form-control' %>
      </div>
      <div class="dropdown">
        <%= form.label "Top sell", style: "display: block" %>
        <%= form.select :top_sell, options_for_select([["True", true], ["False", false]], product.top_sell), {}, class: 'form-select' %>
      </div>

      <%= form.submit "Mettre à jour", class:"btn btn-outline4 btn-lg mt-2 w-100" %>
      <% end %>
    </div>
  <div>
</div>

