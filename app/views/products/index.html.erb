<body>
	<br><br>
  <center>

  <%= render "products/search_form" %>

  <%= sort_link(@q, :description, 'description', default_order: :desc) %>



	<div class="container my-5">
			<div class="row">
			<% Category.all.each do |category| %>
				<div class="col">
				  <%= link_to product_category_path(category.id) do %>
					<%= image_tag(category.link) %>
					<div class="col"></div>
					<span><%= category.title.upcase %></span>
				  <% end %>
				</div>
			  <% end %>
			</div>
		</div>
	</div>
	</center>
  <br><br><br>
	<center>
		<div class="row">
			<div class="bs-component">
				<h2>NOS BONS PLANS DU MOMENT</h2>
				<br><br><br>
				<section class="items-section">
					<div class="row">
						<% Product.all.where(top_sell:true).sort.each do |product| %>
							<%= render product %>
						<% end %>
					</div>
				</section>
			</div>
		</div>
		<div class="row">
		<div class="bs-component">
		<br><br><br>
			<h2>TOUS LES PRODUITS</h2>
			<br><br><br>
			<section class="items-section">
				<div class="row">
					<% Product.all.where(top_sell:false).sort.each do |product| %>
						<%= render product %>
					<% end %>
				</div>
			</section>
		</div>
	</div>
	</center>
	
</body>