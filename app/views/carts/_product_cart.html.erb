<tbody class="align-middle">
  <tr>
    <td class="align-middle"><img src= "" alt="" style="width: 50px;"><%= product_cart.product.title %></td>
    <td class="align-middle"><%= product_cart.product.price %></td>
    <td class="align-middle">
      <div class="input-group quantity mx-auto" style="width: 100px;">
        <div class="input-group-btn">
          <%= link_to "-", product_cart_reduce_path(product_cart.id), class:"btn btn-sm btn-primary btn-minus" %>
          </button>
        </div>
        <input type="text" class="form-control form-control-sm bg-secondary text-center" value=<%=product_cart.quantity%>>
        <div class="input-group-btn">
          <%= link_to "+", product_cart_add_path(product_cart.id), class: "btn btn-sm btn-primary btn-plus" %>
          </button>
        </div>
      </div>
    </td>
    <td class="align-middle"><%= product_cart.total_price %></td>
    <td class="align-middle">
      <%= button_to "", product_cart_path(product_cart.id), method: :delete, class:"btn btn-sm btn-primary fa fa-times" %>
    </td>
  </tr>
</tbody>