
<div class="card border-secondary mb-5">
    <div class="card-header bg-secondary border-0">
        <h4 class="font-weight-semi-bold m-0">Résumé de votre panier</h4>
    </div>
    <div class="card-body">
        <div class="d-flex justify-content-between mb-3 pt-1">
            <h6 class="font-weight-medium">Sous-total</h6>
            <div id="turbo_maj_total_cart">
                <h6 class="font-weight-medium"><%= @cart.sub_total %> €</h6>
            </div>
        </div>
        <div class="d-flex justify-content-between">
            <h6 class="font-weight-medium">Frais de transport</h6>
            <h6 class="font-weight-medium">0 €</h6>
        </div>
    </div>
    <div class="card-footer border-secondary bg-transparent">
        <div class="d-flex justify-content-between mt-2">
            <h5 class="font-weight-bold">Total</h5>
            <div id="turbo_maj_total_cart2">
                <h5 class="font-weight-bold"><%= @cart.sub_total %> €</h5>
            </div>
        </div>
        <% if @cart.sub_total != 0 %>
            <%= button_to "Paiement", cart_checkout_create_path(@cart.id, total: @cart.sub_total), class: "btn btn-outline4 btn-lg w-100", remote: true, "data-turbo" => "false" %> 
        <% end %>
    </div>
</div>
