<div class="bs-component">
  <div class="container mt-4", style="max-width:600px">  
    <h2>Change your password</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-label mt-4">
        <%= f.label :password, "Nouveau mot de passe" %><br />
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"form-control"%>
      </div>

      <div class="form-label mt-4">
        <%= f.label :password_confirmation, "Confirmer votre nouveau mot de passe" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control"%>
      </div>
  </div>

  <div class="container mt-2", style="max-width:600px">  
    <div class="row">
      <div class="actions">
        <%= f.submit "Change my password", class:"btn btn-outline4 btn-lg w-100 mt-2" %>
      </div>
    </div>
    <div class="row mt-4">
      <%= render "devise/shared/links" %>            
    </div>
    <% end %>
</div>


