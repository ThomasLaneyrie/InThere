  </div>
  <div class="col-4 text-end ">

  <%= link_to "Utilisateurs", admin_users_path, class:"btn btn-outline ",  data: { turbo: false }  %>
  </div>
</div>


<% if @comments.length > 0 %>
<table class="table table-hover bg-transparent">
<thead>
  <tr>
    <th scope="col">id</th>
