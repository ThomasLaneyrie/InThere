<h1>Liste des produits en vente</h1>
<%= button_to "Ajouter un nouveau produit", new_product_path, method: :get %>
<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <div class="col-lg-3 table-responsive mb-5">
            <table class="table table-bordered text-center mb-0">
                <thead class="border-white text-white">
                    <tr>
                        <th>Produit</th>
                        <th>Prix</th>
                        <th>Editer</th>
                        <th>Supprimer</th>
                    </tr>
                </thead>
                <% @products.each do |product| %>
                    <%= render partial: "form_product", locals: {product: product} %>
                <% end %>
            </table>
        </div>
    </div>
</div>