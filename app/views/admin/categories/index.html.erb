<div class="row">
  <div class="col-8">
    <h1 class="fw-bold">Cat√©gories</h1>
  </div>
  <div class="col-4 text-end">
    <%= button_to "Add new category", new_admin_category_path, method: :get, class: "btn btn-outline " ,  data: { turbo: false }%>
  </div>
</div>

<table class="table table-hover bg-transparent">
<thead>
  <tr>
    <th scope="col">id</th>
    <th scope="col">Image</th>
    <th scope="col">Titre</th>
    <th scope="col">Slug</th>
    <th scope="col">Actions</th>
  </tr>
</thead>
<tbody>
  <% @categories.each do |category| %>
    <tr>
      <td><%= category.id %></td>
      <td><%= image_tag(category.link, size: "50x50") %></td>
      <td><%= category.title %></td>
      <td><%= category.slug %></td>
      <td>
        <div class="d-flex">
          <%= button_to "Edit", edit_admin_category_path(category), method: :get, class: "btn btn-warning me-2" ,  data: { turbo: false } %>
          <%= button_to "Delete", admin_category_path(category), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
        </div>
      </td>
    </tr>
  <% end %>
</tbody>
</table>