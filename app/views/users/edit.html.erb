<div class="bs-component">
  <div class="container mt-4", style="max-width:600px">  
  <h1>Mise à jour de vos informations personnelles</h1>
    <%= form_for @user do |f| %>
      <div class="form-label mt-4">
        <%= f.label "Prénom" %><br />
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class:"form-control" %>
      </div>
      <div class="form-label mt-4">
        <%= f.label "Nom" %><br />
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class:"form-control" %>
      </div>
      <div class="form-label mt-4">
        <%= f.label "Adresse" %><br />
        <%= f.text_field :address, autofocus: true, autocomplete: "adress", class:"form-control" %>
      </div>
      <div class="form-label mt-4">
        <%= f.label "city" %><br />
        <%= f.text_field :city, autofocus: true, autocomplete: "city", class:"form-control" %>
      </div>
      <div class="form-label mt-4">
        <%= f.label "Code Postale" %><br />
        <%= f.text_field :zip_code, autofocus: true, autocomplete: "zip_code", class:"form-control" %>
      </div>

      <div class="form-group">
        <button type ="submit", class="btn btn-outline4 btn-lg w-100 mt-2">Modifier mes informations</button>
      </div>
    <% end %>
    <div class="container d-flex align-items-center">
      <%= link_to "Mon profil", user_path(current_user.id), class: "nav-item nav-link mx-auto", data: { turbo: false } %>
    </div>
  </div>
</div>


