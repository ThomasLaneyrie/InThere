<div class="container text-center">
  <h3 class="bs-component">Mes informations</h3>
<hr>
  <div class="row">
    <div class="col-xs-6 col-sm-4", style="height-max:220px"> 
      <% if @user.avatar.attached? %>
        <%= image_tag @user.avatar, alt: 'avatar', style: 'max-width: 200px; max-width: 200px;' %>
      <% else %>
        <img src="https://static.vecteezy.com/system/resources/thumbnails/020/647/381/small/empty-face-icon-avatar-with-mustache-illustration-vector.jpg" alt="photo de profil">
      <%end%>
    </div>

    <div class="col-xs-6 col-sm-8 flex-column justify-content-center align-items-start text-pop-delayed-08s">
      <p>Prénom : <%= @user.first_name%> </p>
      <p>Nom : <%= @user.last_name%> </p>
      <p>Email : <%= @user.email%> </p>
      <%= link_to "Modifier mon profil", edit_user_path(@user.id), class:"btn btn-outline-2" %><br>
      <%= link_to "Modifier mon mot de passe",  edit_user_registration_path, class:"btn btn-outline-2" %>
    </div>
  </div>
  
  <hr class="text-pop-delayed-08s">
</div>

<br><br><br>

<div class="container text-pop-delayed-16s">
  <div class="row ">
    <div class="col text-center">
      <h3 class="bs-component">Changer mon avatar</h3>
        <hr>
        <br>
        <%= form_tag user_avatars_path(@user), multipart: true do %>
        <%= file_field_tag :avatar %>
        <%= submit_tag "mettre à jour" %>
      <% end %>
    </div>
  </div>
</div>

<br><br><br>

<div class="container text-pop-delayed-16s">
  <div class="row ">
    <div class="col text-center">
      <h3 class="bs-component">Vos commandes passées</h3>
     <hr>
      <% @user.orders.reverse().each do |order| %>
        <div class="row">
          <div class="col-md-3 col-xs-4">Commande N° <%= order.id %> </div>
          <div class="col-md-3 col-xs-2">Date de la commande : <%= order.created_at.strftime("%d-%m-%Y") %></div>
          <div class="col-md-3 col-xs-4">Montant total : <%= order.cart.sub_total %> €</div>
          <div class="col-md-3 col-xs-4"> <%= link_to "Voir commande N°#{order.id}", order_path(order.id) %> </div>
        </div>
        <hr>
      <% end %>
    </div>
  </div>
</div>

<br><br>
<div class="bs-component text-center text-pop-delayed-16s">
  <%= link_to "Retour page produits", products_path , class:"btn btn-secondary"%>
  <br><br>
</div>
